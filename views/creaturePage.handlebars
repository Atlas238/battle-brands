<div>{{> navbar}}</div>

<div class="d-flex flex-wrap flex-md-row flex-sm-column container justify-content-center">

  <div id="creatureBox" class="active-creature-block container d-flex flex-wrap digital-background">

      <ul class="care-stats-bar col-4">
        <li><p>Happiness: {{myCreature.carestat.happiness}}</p>
          <span></span>
        </li>
        
        <li><p>Hunger: {{myCreature.carestat.hunger}}</p>
          <span></span>
        </li>
        
        <li><p>Grooming: {{myCreature.carestat.grooming}}</p>
          <span></span>
        </li>
        
        <li><p>Energy: {{myCreature.carestat.energy}}</p>
          <span></span>
        </li>
      </ul>

      <div class="creature-pen col-8 bg-sky-day">

        <h2 class="creature-name">{{ myCreature.name }}</h3>

        <i id="icon" data-id="{{ myCreature.id }}" data-user="{{ userId }}" class="fab {{ myCreature.brand.icon }} fa-5x animate-rest"></i>

        <div class="progress">
          <div id="progress"class="progress-bar" role="progressbar" aria-valuenow="{{myCreature.exp}}" aria-valuemin="0" aria-valuemax="10"></div>
        </div>
      </div>

      <div id="interaction-box" class="container">
        <button id="feedBtn" class="button btn-primary p-1">Feed</button>
        <button id="petBtn" class="button btn-primary p-1">Pet</button>
        <button id="catchBtn" class="button btn-primary p-1">Play Catch</button>
      </div>

  </div>

</div>

    <script src="../assets/js/creature/updateCreature.js"></script>